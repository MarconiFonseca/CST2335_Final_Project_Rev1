<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/station_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        tools:text="Station ID" />
    <TextView
        android:id="@+id/station_latitude"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/station_id"
        android:layout_marginTop="10dp"
        tools:text ="Latitude"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/station_longitude"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/station_latitude"
        android:layout_marginTop="10dp"
        tools:text ="Longitude"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/station_number"
        android:layout_width="wrap_content"
        android:layout_below="@+id/station_longitude"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        tools:text ="Contact"
        android:layout_height="wrap_content"/>

</LinearLayout>